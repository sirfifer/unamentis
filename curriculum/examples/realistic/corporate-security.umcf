  "glossary": {
    "terms": [
      {
        "id": "term-phishing",
        "term": "phishing",
        "pronunciation": "/ˈfiSHiNG/",
        "definition": "A fraudulent attempt to obtain sensitive information by disguising as a trustworthy entity in electronic communication.",
        "spokenDefinition": "Phishing is when criminals try to trick you into revealing sensitive information like passwords or credit card numbers by pretending to be a trusted organization through emails, texts, or fake websites.",
        "relatedTerms": ["spear phishing", "social engineering", "malware"]
      },
      {
        "id": "term-mfa",
        "term": "multi-factor authentication",
        "pronunciation": "/ˈməltē ˈfaktər/",
        "definition": "A security system that requires more than one method of authentication from independent categories of credentials.",
        "spokenDefinition": "Multi-factor authentication, or M-F-A, means you need more than just a password to log in. It usually combines something you know, like a password, with something you have, like your phone for a verification code.",
        "synonyms": ["MFA", "two-factor authentication", "2FA"]
      },
      {
        "id": "term-pii",
        "term": "PII",
        "pronunciation": "/piː aɪ aɪ/",
        "definition": "Personally Identifiable Information - any data that could identify a specific individual.",
        "spokenDefinition": "P-I-I stands for Personally Identifiable Information. This includes things like social security numbers, addresses, phone numbers, and email addresses - basically any information that could be used to identify a specific person.",
        "synonyms": ["personally identifiable information", "personal data"]
      }
    ]
  },
